.columns.is-gapless.is-mobile.pagination-bar
    - if @last_page <= 5
        .column.is-3.controls.left
            - if @current_page != 1
                = render 'pagination/prev'
        - $i = 1
        .column.is-6.pages
            - while $i <= @last_page.to_i do
                - if $i == @current_page
                    %span.current-page.is-unselectable= $i
                - else
                    = render 'pagination/page'
                - $i = $i + 1
        .column.is-3.controls.right
            - if @current_page != @last_page
                = render 'pagination/next'
    - else
        - if @current_page > 1 && @current_page < @last_page
            - if @current_page == 2
                .column.is-3.controls.left
                    = render 'pagination/first'
                - $i = 1
                .column.is-6.pages
                    - while $i <=5
                        - if $i == @current_page
                            %span.current-page.is-unselectable= $i
                        - else
                            = render 'pagination/page'
                        - $i = $i + 1
                .column.is-3.controls.right
                    = render 'pagination/next'
                    = render 'pagination/last'
            - else
                - if @current_page == @last_page.to_i - 1
                    .column.is-3.controls.left
                        = render 'pagination/first'
                        = render 'pagination/prev'
                    - $i = @current_page - 3
                    .column.is-6.pages
                        - while $i <= @current_page + 1
                            - if $i == @current_page
                                %span.current-page.is-unselectable= $i
                            - else
                                = render 'pagination/page'
                            - $i = $i + 1
                    .column.is-3.controls.right
                        = render 'pagination/last'
                - else
                    .column.is-3.controls.left
                        = render 'pagination/first'
                        = render 'pagination/prev'
                    - $i = @current_page - 2
                    .column.is-6.pages
                        - while $i <= @current_page + 2
                            - if $i == @current_page
                                %span.current-page.is-unselectable= $i
                            - else
                                = render 'pagination/page'
                            - $i = $i + 1
                    .column.is-3.controls.right
                        = render 'pagination/next'
                        = render 'pagination/last'
        - else 
            - if @current_page == @last_page
                .column.is-3.controls.left
                    = render 'pagination/first'
                    = render 'pagination/prev'
                - $i = @current_page - 4
                .column.is-6.pages
                    - while $i <= @current_page
                        - if $i == @current_page
                            %span.current-page.is-unselectable= $i
                        - else
                            = render 'pagination/page'
                        - $i = $i + 1
                .column.is-3.controls.right
            - else
                .column.is-3.controls.left
                - $i = 1
                .column.column.is-6.pages
                    - while $i <=5
                        - if $i == @current_page
                            %span.current-page.is-unselectable= $i
                        - else
                            = render 'pagination/page'
                        - $i = $i + 1
                .column.is-3.controls.right
                    = render 'pagination/next'
                    = render 'pagination/last'